---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/woman-holding-a-heart.svg";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Women holding a heart"
      widths={[200, 400, 600]}
      aspectRatio="4:3"
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Black & White Home Care
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Empowering people living with disabilities and a focus on equality and inclusiveness.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="#:~:text=Enquire%20Now-,Our%20Services"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-dashboard" />

        Our Services 
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/contact"
        class="flex gap-1 items-center justify-center"
        <Icon class="text-black w-4 h-4" name="bx:bxs-chat" />
        Enquire Now 
      </Link>
    </div>
  </div>
</main>
